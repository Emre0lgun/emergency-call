<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tr.org.akut.guvendeyim.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="AYARLAR"
            android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesaj Gönderilecek Telefon Numaraları"
            />
        <EditText
            android:id="@+id/tel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="05XXXXXXXXX" />

        <EditText
            android:id="@+id/tel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="05XXXXXXXXX" />

        <EditText
            android:id="@+id/tel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="05XXXXXXXXX" />

        <EditText
            android:id="@+id/tel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="05XXXXXXXXX" />

        <EditText
            android:id="@+id/tel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="05XXXXXXXXX" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gönderilecek Mesajın Türü"
            />
        <RadioGroup
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/danger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acil Durum!"/>
            <RadioButton
                android:id="@+id/okey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ben iyiyim"/>
        </RadioGroup>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAYDET" />
        <Button
            android:id="@+id/bck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GERİ DÖN" />

    </LinearLayout>

</ScrollView>